{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@atoms/*": ["src/atoms/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@layout/*": ["src/layout/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@data/*": ["src/data/*"],
      "@context/*": ["src/context/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
